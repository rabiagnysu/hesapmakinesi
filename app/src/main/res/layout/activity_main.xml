<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/siyah"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TableLayout
        android:id="@+id/tablo"
        android:layout_width="358dp"
        android:layout_height="371dp"
        android:layout_marginBottom="40dp"
        android:background="@color/siyah"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <Button
                android:id="@+id/temizle"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:insetLeft="20dp"
                android:insetTop="20dp"
                android:insetBottom="20dp"
                android:text="delete"
                android:textSize="36sp" />


            <Button
                android:id="@+id/bölü"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/black"
                android:insetLeft="20dp"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="36sp"
               />

            <Button
                android:id="@+id/çarpı"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:insetLeft="20dp"
                android:text="x"
                android:textSize="36sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/button7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/grey"
                android:insetLeft="20dp"
                android:text="7"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/grey"
                android:insetLeft="20dp"
                android:text="8"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/grey"
                android:insetLeft="20dp"
                android:text="9"
                android:textSize="36sp" />

            <Button
                android:id="@+id/çıkar"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/grey"
                android:insetLeft="20dp"
                android:text="-"
                android:textSize="36sp"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/grey"
                android:insetLeft="20dp"
                android:text="4"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/grey"
                android:insetLeft="20dp"
                android:text="5"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/grey"
                android:insetLeft="20dp"
                android:text="6"
                android:textSize="36sp" />

            <Button
                android:id="@+id/topla"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/grey"
                android:insetLeft="20dp"
                android:text="+"
                android:textSize="36sp"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/grey"
                android:insetLeft="20dp"
                android:text="1"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/grey"
                android:insetLeft="20dp"
                android:text="2"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/grey"
                android:insetLeft="20dp"
                android:text="3"
                android:textSize="36sp" />

            <Button
                android:id="@+id/buttoneşittir"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/red"
                android:insetLeft="20dp"
                android:text="="
                android:textSize="36sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <Button
                android:id="@+id/sıfır"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:backgroundTint="@color/grey"
                android:insetLeft="20dp"
                android:text="0"
                android:textSize="36sp" />


            <Button
                android:id="@+id/nokta"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/grey"
                android:insetLeft="20dp"
                android:text="."
                android:textSize="36sp" />
            <Button
                android:id="@+id/modalma"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/grey"
                android:insetLeft="20dp"
                android:text="%"
                android:textSize="36sp" />




        </TableRow>

    </TableLayout>

    <EditText
        android:id="@+id/hesapekrani"
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/yuvarlak"
        android:text=""
        android:textAlignment="textEnd"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        android:verticalScrollbarPosition="right"
        app:layout_constraintBottom_toTopOf="@+id/tablo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.62"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck"


        />

</androidx.constraintlayout.widget.ConstraintLayout>